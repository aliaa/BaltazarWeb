@model IEnumerable<BaltazarWeb.Models.Answer>
@inject AliaaCommon.MongoDB.MongoHelper DB

@{
    ViewData["Title"] = "تائید جواب ها";
}

<h2>تائید جواب ها</h2>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink("جزئیات", "Details", new { id = item.Id.ToString() })
                </td>
                <td>
                    @{ Html.Raw(DB.FindById<Student>(item.UserId)?.DisplayName); }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td>
                <td>
                    @if (!item.HasImage)
                    {
                        @Html.ActionLink("تائید", "Accept", new { id = item.Id.ToString() })
                        Html.Raw(" | ");
                    }
                    @Html.ActionLink("نامناسب", "Reject", new { id = item.Id.ToString() })
                </td>
            </tr>
        }
    </tbody>
</table>
