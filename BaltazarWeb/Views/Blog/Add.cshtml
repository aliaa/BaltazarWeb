@model BaltazarWeb.Models.Blog

@{
    ViewData["Title"] = "افزودن بلاگ";
}

<h2>افزودن بلاگ</h2>

<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Add" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HtmlContent" class="control-label"></label>
                <textarea asp-for="HtmlContent" class="form-control" style="height:200px;"></textarea>
                <span asp-validation-for="HtmlContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label dir="ltr">
                        <input asp-for="ShowOnApp" /> @Html.DisplayNameFor(model => model.ShowOnApp)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label dir="ltr">
                        <input asp-for="ShowOnWeb" /> @Html.DisplayNameFor(model => model.ShowOnWeb)
                    </label>
                </div>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.ImageFile): <input asp-for="ImageFile" />
            </div>
            <div class="form-group">
                <input type="submit" value="ایجاد" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
