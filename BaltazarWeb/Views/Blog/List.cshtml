@model IEnumerable<BaltazarWeb.Models.Blog>

@{
    ViewData["Title"] = "لیست بلاگ";
}

<h2>لیست بلاگ</h2>

<p>
    <a asp-action="Add">افزودن</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateAdded)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShowOnApp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShowOnWeb)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @(Utils.GetPersianDateString(item.DateAdded))
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShowOnApp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShowOnWeb)
            </td>
            <td>
                @Html.ActionLink("ویرایش", "Edit", new { id=item.Id.ToString() }) |
                @Html.ActionLink("حذف", "Delete", new { id = item.Id.ToString() })
            </td>
        </tr>
}
    </tbody>
</table>
