@model BaltazarWeb.Models.CourseSection
@inject AliaaCommon.MongoDB.MongoHelper DB

@{
    ViewData["Title"] = "ویرایش سرفصل";
}

<h2>ویرایش سرفصل</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CourseId" class="control-label"></label>
                @Html.DropDownListFor(model => model.CourseId, DB.All<Course>().Select(c => new SelectListItem(c.Name, c.Id.ToString())))
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ذخیره" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">بازگشت به لیست</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
