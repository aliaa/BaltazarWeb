@model BaltazarWeb.Models.UploadedFile

@{
    ViewData["Title"] = "آپلود فایل جدید";
}

<h2>آپلود فایل جدید</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="New" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="File" class="control-label"></label>
                <input asp-for="File" class="form-control" />
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="آپلود" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">برگشت به لیست</a>
</div>

